{
  "name": "tracking-service",
  "version": "1.0.0",
  "description": "Microservice for the purpose of storing activity tracking",
  "main": "server.js",
  "scripts": {
    "build": "gulp build && npm run build:doc",
    "build:doc": "typedoc --options typedoc.json",
    "start": "run-script-os",
    "start:win32": "SET NODE_ENV=prod && node dist/server.js",
    "start:darwin:linux": "export NODE_ENV=prod && node dist/server.js",
    "start:dev": "gulp build:dev",
    "test": "run-script-os",
    "test:win32": "SET NODE_ENV=test && mocha --opts test/mocha.opts test/**/*.spec.ts",
    "test:darwin:linux": "export NODE_ENV=test && mocha --opts test/mocha.opts test/**/*.spec.ts",
    "test:integration": "run-script-os",
    "test:integration:win32": "SET NODE_ENV=test && mocha --opts test/mocha.opts test/integration/**/*.spec.ts",
    "test:integration:darwin:linux": "export NODE_ENV=test && mocha --opts test/mocha.opts test/integration/**/*.spec.ts",
    "test:unit": "run-script-os",
    "test:unit:win32": "SET NODE_ENV=test && mocha --opts test/mocha.opts test/unit/**/*.spec.ts",
    "test:unit:darwin:linux": "export NODE_ENV=test && mocha --opts test/mocha.opts test/unit/**/*.spec.ts",
    "test:cov": "run-script-os",
    "test:cov:win32": "SET NODE_ENV=test && nyc --reporter=html --reporter=text mocha --opts test/mocha.opts test/**/*.spec.ts",
    "test:cov:darwin:linux": "export NODE_ENV=test && nyc --reporter=html --reporter=text mocha --opts test/mocha.opts test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": "http://200.129.82.7:8000/nutes-ocariot/server/tracking-service",
  "keywords": [
    "microservice, nodejs"
  ],
  "author": "Lucas Rocha <lucas.rocha@nutes.uepb.edu.br>",
  "license": "MIT",
  "nyc": {
    "include": [
      "**/*.tsx",
      "**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/*",
      "config/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "amqp": "^0.2.7",
    "amqplib": "^0.5.2",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "mongoose": "^5.1.1",
    "swagger-ui-express": "^3.0.9",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.1",
    "@types/mongoose": "^5.0.15",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.0.10",
    "@types/yamljs": "^0.2.30",
    "chai": "^4.1.2",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-typescript": "^4.0.2",
    "mocha": "^5.1.1",
    "morgan": "^1.9.0",
    "nyc": "^12.0.2",
    "sinon": "^5.0.10",
    "source-map-support": "^0.5.6",
    "supertest": "^3.1.0",
    "ts-node": "^6.0.5",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.1",
    "run-script-os": "^1.0.3"
  }
}
