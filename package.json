{
  "name": "iot-tracking",
  "version": "2.0.3",
  "description": "Microservice responsible for tracking activities, sleep, environments and measurements on the OCARIoT platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "gulp build",
    "build:doc": "typedoc --options typedoc.json",
    "start": "node dist/server.js",
    "start:dev": "gulp dev",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "nyc --clean --all --reporter=text-summary mocha --opts test/mocha.opts test/**/*.spec.ts",
    "test:unit": "nyc --clean --all --reporter=text-summary mocha --opts test/mocha.opts test/unit/**/*.spec.ts",
    "test:integration": "nyc --clean --all --reporter=text-summary mocha --opts test/mocha.opts test/integration/**/*.spec.ts",
    "test:single": "mocha --opts test/mocha.opts",
    "test:cov": "nyc --clean --all --reporter=html --reporter=text mocha --opts test/mocha.opts test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ocariot/iot-tracking.git"
  },
  "keywords": [
    "microservice",
    "tracking",
    "activity",
    "sleep",
    "weight",
    "body-fat",
    "environment"
  ],
  "author": "NUTES/UEPB",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ocariot/iot-tracking/issues"
  },
  "homepage": "https://github.com/ocariot/iot-tracking#readme",
  "nyc": {
    "include": [
      "**/*.tsx",
      "**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/*",
      "config/*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@ocariot/rabbitmq-client-node": "1.2.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.0",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "ip-allowed": "^1.1.1",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "query-strings-parser": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.2",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.22",
    "@types/morgan": "^1.7.37",
    "@types/swagger-ui-express": "^3.0.1",
    "chai": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.4.2",
    "gulp-tslint": "^8.1.4",
    "gulp-typescript": "^5.0.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  }
}
